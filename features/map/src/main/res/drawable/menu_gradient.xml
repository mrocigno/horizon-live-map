<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="50dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/black_menu_gradient"
                android:angle="90"/>

        </shape>
    </item>

    <item
        android:height="50dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/black_menu_gradient"
                android:angle="-90"/>

        </shape>
    </item>
</layer-list>