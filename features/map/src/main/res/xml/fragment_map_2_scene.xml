<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        android:id="@+id/dsa"
        motion:constraintSetEnd="@+id/peek"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/asd"
        motion:constraintSetEnd="@+id/half"
        motion:constraintSetStart="@id/peek"
        motion:duration="1000">

        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/bottom_sheet"
            motion:limitBoundsTo="@id/bottom_sheet"
            motion:touchRegionId="@id/bottom_sheet"
            />
    </Transition>
    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/peek">
        <Constraint
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/peek_bottom_sheet"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/image_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_container_peek_size"
            motion:layout_constraintBottom_toTopOf="@id/bottom_sheet" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/half"
        motion:deriveConstraintsFrom="@+id/peek" >
        <Constraint
            android:id="@+id/image_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_container_expanded_size"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/image_frame" />
    </ConstraintSet>

</MotionScene>