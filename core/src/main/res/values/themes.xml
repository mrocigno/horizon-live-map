<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Horizon.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Base theme -->
    </style>

    <style name="Theme.HorizonLiveMap" parent="Theme.Horizon.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorControlNormal">@color/background</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="Theme.HorizonLiveMap.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>-->
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>